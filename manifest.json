{
    "name": "Palmetto Cargas Extension",
    "version": "0.2",
    "manifest_version": 2,
    "description": "Adds unique functionality to the Palmetto Cargas website",
    "icons": {
        "128": "images/128.png",
        "48": "images/48.png",
        "16": "images/16.png"
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "*://*.prod-190.westus.logic.azure.com/*"
    ],
    "content_scripts": [
        {
            "persistent": true,
            "js": ["jquery.min.js", "index.js"],
            "css": ["style.css"],
            "matches": ["https://palmetto-cargas.silverlinevps.com/cargasenergy/Customer/*"],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "index.html"
    }
}